{
  "provider": {
    "minimax": {
      "api": "https://api.minimax.chat/v1",
      "name": "Minimax",
      "env": ["MINIMAX_API_KEY"],
      "npm": "@ai-sdk/openai-compatible",
      "models": {
        "m2": {
          "id": "m2",
          "name": "Minimax M2",
          "attachment": false,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "cost": {
            "input": 0,
            "output": 0
          },
          "limit": {
            "context": 1000000,
            "output": 4096
          }
        }
      }
    }
  },
  "autoContinuation": {
    "enabled": true,
    "maxAutonomousTasks": 10,
    "confidenceThreshold": 0.7,
    "safetyLevel": "moderate"
  },
  "$schema": "https://opencode.ai/config.json"
}
